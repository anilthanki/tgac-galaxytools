<tool id="blast_parser" name="HMMER parser" version="0.1.2">
    <description>
        Convert a HMMER search -tblout into hcluster_sg style output
    </description>
    <command detect_errors="exit_code">
<![CDATA[
python '$__tool_directory__/hmmer_parser.py'
-i '$input'
-o '$output'
]]>
    </command>

    <inputs>
        <param name="input" type="data" format="txt" label="tblout data" help="Data generated with -tblout flag"/>
    </inputs>

    <outputs>
        <data name="output" format="tabular" label="$tool.name on ${on_string}" />
    </outputs>

    <tests>
        <test>
            <param name="input" ftype="txt" value="input.txt" />
            <output name="output" file="output.tabular" />
        </test>
    </tests>
    <help>
<![CDATA[
Simple tool to convert  a HMMER search -tblout into hcluster_sg style output (cluster_id, cluster_length, gene_ids).
]]>
    </help>
    <citations>
    </citations>
</tool>
